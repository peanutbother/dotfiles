{
  "editor.formatOnSave": true,
  "nixEnvSelector.suggestion": true,
  "nixEnvSelector.nixFile": "${workspaceRoot}/shells/nix/flake.nix",
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "nix.serverSettings": {
    "nixd": {
      "formatting": { "command": ["alejandra", "--quiet"] }
    }
  },
  "redhat.telemetry.enabled": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "explorerExclude.backup": {}
}
